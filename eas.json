{
	"cli": {
		"version": ">= 5.0.0",
		"appVersionSource": "remote"
	},
	"build": {
		"development": {
			"developmentClient": true,
			"distribution": "internal",
			"ios": {
				"simulator": true
			}
		},
		"preview": {
			"distribution": "internal"
		},
		"production": {
			"autoIncrement": true
		}
	},
	"submit": {
		"production": {
			"ios": {
				"appleId": "${APPLE_ID}",
				"ascAppId": "${ASC_APP_ID}",
				"appleTeamId": "${APPLE_TEAM_ID}"
			},
			"android": {
				"serviceAccountKeyPath": "./pc-api-key.json",
				"track": "internal"
			}
		}
	}
}
